---
// src/components/Header.astro
export interface Props {
  language?: 'english' | 'indonesia';
  subtitle?: string;
  subtitle_id?: string;
  title?: string;
  slogan?: string;
}

const { 
  language = 'english',
  subtitle,
  subtitle_id,
  title,
  slogan
} = Astro.props;

// Determine which subtitle to show based on language
const displaySubtitle = language === 'indonesia' ? subtitle_id : subtitle;
---

<div class="site_header flex flex_align_center js_scrollto01">
  {displaySubtitle && (
    <div class={`site_title btn ${title || ''}`}>
      {displaySubtitle}
    </div>
  )}
</div>