---
// src/components/Header.astro
import Hi from "@components/LogoAni.astro";
---

<style>
  .brand {
    font-weight: 300 !important;
    font-size: 200%;
    line-height: 1.25;
    padding-block: 0;
  }
  .cover {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: var(--space_block) var(--space_inline);
    min-height: 100svh;
    height: 100svh;
    background-size: cover;
    background-color: var(--brand);
    color: var(--white);
  }
  .slogan {
    padding-top: calc(var(--space_block) * 2);
    padding-bottom: calc(var(--space_block) / 4);
    padding-inline: calc(var(--space_inline) * 1);
    text-wrap: pretty;
    text-align: center;
    font-weight: 400;
  }
  p {
    margin-bottom: calc(var(--space_block) / 8);
  }
  small {
    padding-top: calc(var(--space_block) / 4);
  }
  .jsScrollButton,
  .jsScrollButton:hover {
    cursor: pointer;
  }

  /*ANIM*/
  @property --luma {
    syntax: "<number>";
    initial-value: 0.5286;
    inherits: false;
  }

  @keyframes darken {
    to {
      --luma: 0; /* OKLCH black */
    }
  }

  .header_astro {
    background: oklch(var(--luma) 0.1735 255deg);

    animation: darken linear;
    animation-timeline: scroll();
    animation-range: 0svh 100svh;
  }
</style>
<header slot="landing_screen" class="cover jsScrollButton header_astro">
  <Hi />

  <div class="slogan uppercase maxcontrast_white" id="slogan0">
    <p>Your business, simplified.</p><p>Your life, upgraded.</p>
    <p>Trade grunt-work for free time!</p>
    <p>&nbsp;</p>
    <small>Discover</small>
    <h1 class="brand">JUNGLESTAR</h1>
    <p>&nbsp;</p>
    <p>â†“</p>
  </div>

  <div class="jsScrollTarget">&nbsp;</div>
</header>
