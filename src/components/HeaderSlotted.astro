---
// src/components/HeaderSlotted.astro
import Hi from "@components/LogoAni.astro";
---

<style>
  .brand {
    font-weight: 300 !important;
    font-size: 200%;
    line-height: 1.25;
    padding-block: 0;
  }
  .cover {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: var(--space_block) var(--space_inline);
    min-height: 100svh;
    height: 100svh;
    background-size: cover;
    background-color: var(--brand);
    color: var(--white);
  }
  .first_click_landing {
    position: absolute;
    bottom: 0;
  }
  .slogan {
    padding-top: calc(var(--space_block) * 2);
    padding-bottom: calc(var(--space_block) / 4);
    padding-inline: calc(var(--space_inline) * 1);
    text-wrap: pretty;
    text-align: center;
    font-weight: 400;
  }
  p {
    margin-bottom: calc(var(--space_block) / 8);
  }
  small {
    padding-top: calc(var(--space_block) / 4);
  }

  .jsScrollButton,
  .jsScrollButton:hover {
    cursor: pointer;
  }
</style>

<header slot="landing_screen" class="cover jsScrollButton header_slotted_astro">
  <Hi />

  <div class="slogan" id="slogan0">
    <h1 class="brand">
      <slot />
    </h1>
    <p>&nbsp;</p>
    <p>â†“</p>
  </div>
  <div class="jsScrollTarget">&nbsp;</div>
</header>
