---
// src/components/LandingScreen.astro
import Hi from "@components/LogoAni.astro";
---

<style>
    .brand {
        font-weight: 300 !important;
        font-size: 200%;
        line-height: 1.25;
        padding-block: 0;
    }
    .cover {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: var(--space) var(--space_);
        min-height: 100svh;
        height: 100svh;
        background-size: cover;
        background-color: #0069cc;
        color: var(--white);
    }
    .slogan {
        padding-top: calc(var(--space) * 2);
        padding-bottom: calc(var(--space) / 4);
        padding-inline: calc(var(--space_) * 1);
        text-wrap: pretty;
        text-align: center;
        font-weight: 300;
    }
    p {
        margin-bottom: calc(var(--space) / 8);
    }
</style>

<header class="cover js_scrollto01">
    <Hi />

    <div class="slogan" id="slogan0">
        <p>Your business, simplified.</p><p>Your life, upgraded.</p>
        <h1 class="brand">JUNGLESTAR</h1>
        <p>Trade grunt-work for poolside.</p>
        <!-- <p>Trade paperwork for poolside.</p> -->
    </div>
</header>
