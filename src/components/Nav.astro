---
// src/components/Nav.astro
//
// Helper to check if current page
const currentPath = Astro.url.pathname;
---

<style>
    nav.flexcolo {
        display: flex;
        flex-direction: column;
        align-items: start;
        margin-block: calc(var(--space_block) * 1);
        padding-left: 5.5rem;
    }
    .button {
        text-align: center;
        text-transform: uppercase;
    }
</style>
<nav class="flexcolo" role="menu">
    <a
        class="button"
        role="menuitem"
        title="Design and development"
        href="/design"
    >
        <span class="page_title">Communication Design</span>
    </a>

    <a
        class="button"
        role="menuitem"
        title="Content production and management"
        href="/content"
    >
        <span class="page_title">Content production</span>
    </a>

    <a class="button" role="menuitem" title="Packages offer" href="/offer">
        <span class="page_title">Website Pricing</span>
    </a>
</nav>
