---
// src/layouts/Layout.astro
import LandingScreen from "@components/LandingScreen.astro";
import Head from "@components/Head.astro";
import Footer from "@footer/Footer.astro";
import "@styles/global.css";

export interface Props {
    title: string;
    description?: string;
    sitemap?: boolean;
}

const {
    title,
    description = "Sustainable Web Design to help fight Climate Change",
    sitemap = true,
} = Astro.props;
---

<style>
    main {
        background-color: var(--white);
    }
</style>

<html lang="en">
    <Head title={title} description={description} sitemap={sitemap} />
    <body>
        <!-- ASCII art comment -->
        <!--
          _                   _           _
         | |_   _ _ __   __ _| | ___  ___| |_ __ _ _ __
      _  | | | | | '_ \ / _` | |/ _ \/ __| __/ _` | '__|
     | |_| | |_| | | | | (_| | |  __/\__ \ || (_| | |
      \___/ \__,_|_| |_|\__, |_|\___||___/\__\__,_|_|
                        |___/

     site     : https://junglestar.org
     email    : info@junglestar.org
     twitter  : @rokmatwit
    -->
        <slot name="head_banner" />
        <LandingScreen />
        <main class="main">
            <slot />
        </main>

        <Footer />
    </body>
</html>
