---
// src/layouts/Layout.astro
import Head from "@components/Head.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";

// Import your global styles
import "@styles/global.css";

export interface Props {
    title: string;
    description?: string;
    language?: "english" | "indonesia";
    sitemap?: boolean;
    subtitle?: string;
    subtitle_id?: string;
    slogan?: string;
}

const {
    title,
    description = "Sustainable Web Design to help fight Climate Change",
    language = "english",
    sitemap = true,
    subtitle,
    subtitle_id,
    slogan,
} = Astro.props;
---

<!doctype html>
<html lang={language === "indonesia" ? "id" : "en"}>
    <Head title={title} description={description} sitemap={sitemap} />
    <body>
        <!-- ASCII art comment -->
        <!--
          _                   _           _
         | |_   _ _ __   __ _| | ___  ___| |_ __ _ _ __
      _  | | | | | '_ \ / _` | |/ _ \/ __| __/ _` | '__|
     | |_| | |_| | | | | (_| | |  __/\__ \ || (_| | |
      \___/ \__,_|_| |_|\__, |_|\___||___/\__\__,_|_|
                        |___/

     site     : https://junglestar.org
     email    : info@junglestar.org
     twitter  : @rokmatwit
    -->

        <Header
            language={language}
            subtitle={subtitle}
            subtitle_id={subtitle_id}
            title={title}
            slogan={slogan}
        />

        <main class="main">
            <div class="page_content">
                <slot />
            </div>
        </main>

        <Footer />
    </body>
</html>
