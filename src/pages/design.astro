---
import Layout from "@layouts/Layout.astro";
import Header from "@components/HeaderSlotted.astro";
import { getCollection, render } from "astro:content";
import { Image } from "astro:assets";

const posts = await getCollection("designConcepts", ({ data }) => {
  return !import.meta.env.PROD || data.draft !== true;
});
// Sort with fallback for undefined sort_order
posts.sort((a, b) => {
  const orderA = a.data.sort_order ?? 999; // Default to 999 if undefined
  const orderB = b.data.sort_order ?? 999;
  return orderA - orderB;
});
// Render all posts content
const renderedPosts = await Promise.all(
  posts.map(async (post) => {
    const { Content } = await render(post);
    return {
      ...post,
      Content,
    };
  }),
);

// Page metadata
const titleTAB = "Junglestar | Design: Because Why";
const description =
  "Sustainable Web Design to help the planet. Change. We help small enterprises with websites, apps, and marketing communication.";
const titlePAGE = "Design, Sustainabilty!? Because Why?";
---

<style>
  h1 {
    color: var(--black);
  }

  body.design {
    p small em {
      color: var(--brand);
      margin-left: -1rem;
      font-size: calc(var(--font_rem) * 0.75);
      text-transform: uppercase;
      font-weight: 500;
    }
    .post_content ul {
      margin-top: -0.751rem;
      margin-bottom: 0.75rem;
      margin-left: calc(var(--space_inline) * 2);
      padding-bottom: 1rem !important;
    }

    @media (min-width: 601px) {
      .post_content ul {
        margin-left: calc(var(--space_inline) * 1);
      }
    }
    @media (min-width: 821px) {
      .post_content ul {
        margin-left: calc(var(--space_inline) * 0.75);
      }
    }
  }
</style>

<Layout title={titleTAB} description={description} pageSubtitle={titlePAGE} bodyClass="design">
  <div slot="landing_screen">
    <Header>{titlePAGE}</Header>
  </div>
  <div class="wrap">
    <h2 class="center"> Design does deliver!</h2>

    <!-- Table of Contents -->
    <div class="wrap">
      <div class="toc max_width_60ch">
        <h4>Table of Contents</h4>
        <ul>
          {
            renderedPosts.map((post) => (
              <li>
                <a href={`#${post.id}`}>
                  <span>{post.data.title}</span>
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>

    <!-- Posts Content -->
    <div class="wrap posts_container">
      {
        renderedPosts.map((post) => (
          <article class="post" id={post.id}>
            {post.data.image && (
              <div class="post_image">
                <Image src={post.data.image.src} alt={post.data.image.alt} />
              </div>
            )}

            <div class="post_header">
              <h3 class="post_title">{post.data.title}</h3>
              {post.data.subtitle && <p class="post_subtitle">{post.data.subtitle}</p>}

              {post.data.tags && post.data.tags.length > 0 && (
                <div class="post_tags">
                  {post.data.tags.map((tag) => (
                    <span class="tag">{tag}</span>
                  ))}
                </div>
              )}

              <div class="post_content">
                <post.Content />
              </div>
            </div>
          </article>
        ))
      }
    </div>
  </div>

  <div class="flex flex_justify_center flex_align_center important_banner">
    <a class="button CTAbutton" href="mailto:info@junglestar.org?subject=Send me more infos about Junglestar's Design">
      Let's start talking!
    </a>
  </div>
</Layout>
