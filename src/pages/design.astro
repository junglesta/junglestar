---
import Layout from "@layouts/Layout.astro";
import LandingScreen from "@components/HeaderDesign.astro";
import { getCollection, render } from "astro:content";
import { Image } from "astro:assets";

const posts = await getCollection("designConcepts", ({ data }) => {
  return !import.meta.env.PROD || data.draft !== true;
});

// Render all posts content
const renderedPosts = await Promise.all(
  posts.map(async (post) => {
    const { Content } = await render(post);
    return {
      ...post,
      Content,
    };
  }),
);

// Page metadata
const title = "Junglestar Design | Because Why";
const description =
  "Sustainable Web Design to help the planet. Change. We help small enterprises with websites, apps, and marketing communication.";
---

<style>
  h1 {
    /*font-size: 2.5rem;
        margin-bottom: 2rem;*/
    color: #111827;
  }

  .toc {
    margin: var(--space_block) 0;
    padding: var(--space_block);
    background-color: #f9fafb;
    border-radius: var(--radius);
  }

  .toc ul {
    list-style: none;
    padding: 0;
  }

  .toc a {
    color: var(--brand);
    text-decoration: none;
  }

  .toc a:hover {
    text-decoration: underline;
  }

  .posts_container {
    margin-top: calc(var(--space_block) * 2);
  }

  .post {
    margin-bottom: calc(var(--space_block) * 2);
    padding: 2rem 0;
    border-bottom: 1px solid white;
    display: flex;
    flex-wrap: wrap;
  }

  .post:last-child {
    border-bottom: none;
  }

  .post_header {
    margin-bottom: calc(var(--space_block) * 1);
  }

  .post_title {
    color: var(--brand);
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

  .post_subtitle {
    margin-bottom: 1rem;
    font-weight: var(--weight_med);
  }

  .post_image {
    margin: var(--space_block) 0;
    text-align: center;
    width: 400px;
  }

  .post_image img {
    max-width: 100%;
    height: auto;
    border-radius: var(--radius);
  }

  .post_content {
    max-width: 60ch;
    margin-inline: auto;
    /*color: #374151;*/
  }

  /*.post_content :global(p) {
        margin-bottom: var(--space_block);
    }*/

  .post_content :global(ul),
  .post_content :global(ol) {
    margin-bottom: var(--space_block);
    padding-left: var(--space_inline);
  }

  .post_content :global(a) {
    color: var(--brand);
    text-decoration: underline;
  }

  /*.back_to_top {
    display: inline-block;
    margin-top: 1rem;
    color: var(--brand);
    text-decoration: none;
    font-size: 0.9rem;
  }

  .back_to_top:hover {
    text-decoration: underline;
  }*/
</style>

<Layout title={title} description={description}>
  <div slot="landing_screen">
    <LandingScreen />
  </div>
  <div class="wrap">
    <h2 class="center">Design delivers!</h2>
    <h3 class="center"> Designing for sustainabilty? What's that... </h3>

    <!-- Table of Contents -->
    <div class="wrap">
      <div class="toc">
        <h4 class="center">Table of Contents</h4>
        <ul>
          {
            renderedPosts.map((post) => (
              <li>
                <a href={`#${post.id}`}>{post.data.title.toUpperCase()}</a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>

    <!-- Posts Content -->
    <div class="wrap posts_container">
      {
        renderedPosts.map((post) => (
          <article class="post" id={post.id}>
            {post.data.image && (
              <div class="post_image">
                <Image src={post.data.image.src} alt={post.data.image.alt} width={300} height={300} />
              </div>
            )}

            <div class="post_header">
              <h3 class="post_title">{post.data.title}</h3>
              {post.data.subtitle && <p class="post_subtitle">{post.data.subtitle}</p>}
              <div class="post_content">
                <post.Content />
              </div>
            </div>
          </article>
        ))
      }
    </div>
  </div>
</Layout>
