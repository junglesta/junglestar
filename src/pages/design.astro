---
import Layout from "@layouts/Layout.astro";
import { getCollection, render } from "astro:content";
import { Image } from "astro:assets";

const posts = await getCollection("designConcepts", ({ data }) => {
    return !import.meta.env.PROD || data.draft !== true;
});

// Render all posts content
const renderedPosts = await Promise.all(
    posts.map(async (post) => {
        const { Content } = await render(post);
        return {
            ...post,
            Content,
        };
    }),
);

// Page metadata
const title = "Junglestar Design | Because Why";
const description =
    "Sustainable Web Design to help the planet. Change. We help small enterprises with websites, apps, and marketing communication.";
---

<style>
    main {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem 1rem;
    }

    h1 {
        font-size: 2.5rem;
        margin-bottom: 2rem;
        color: #111827;
    }

    .baloon {
        border: 1px solid var(--brand);
        border-radius: var(--radius);
        padding: 1rem;
        margin-bottom: 2rem;
    }

    .toc {
        margin: 2rem 0;
        padding: 1.5rem;
        background-color: #f9fafb;
        border-radius: var(--radius);
    }

    .toc h2 {
        margin-bottom: 1rem;
        font-size: 1.25rem;
    }

    .toc ul {
        list-style: none;
        padding: 0;
    }

    .toc li {
        margin-bottom: 0.5rem;
    }

    .toc a {
        color: var(--brand);
        text-decoration: none;
    }

    .toc a:hover {
        text-decoration: underline;
    }

    .posts-container {
        margin-top: 3rem;
    }

    .post {
        margin-bottom: 4rem;
        padding: 2rem 0;
        border-bottom: 1px solid #e5e7eb;
    }

    .post:last-child {
        border-bottom: none;
    }

    .post-header {
        margin-bottom: 2rem;
    }

    .post-title {
        font-size: 2rem;
        margin-bottom: 0.5rem;
        color: #111827;
    }

    .post-subtitle {
        font-size: 1.25rem;
        color: #6b7280;
        margin-bottom: 1rem;
    }

    .post-image {
        margin: 2rem 0;
        text-align: center;
    }

    .post-image img {
        max-width: 100%;
        height: auto;
        border-radius: var(--radius);
    }

    .post-content {
        font-size: 1.1rem;
        line-height: 1.7;
        color: #374151;
    }

    .post-content :global(h1),
    .post-content :global(h2),
    .post-content :global(h3) {
        margin-top: 2rem;
        margin-bottom: 1rem;
    }

    .post-content :global(p) {
        margin-bottom: 1rem;
    }

    .post-content :global(ul),
    .post-content :global(ol) {
        margin-bottom: 1rem;
        padding-left: 2rem;
    }

    .post-content :global(a) {
        color: var(--brand);
        text-decoration: underline;
    }

    .back-to-top {
        display: inline-block;
        margin-top: 1rem;
        color: var(--brand);
        text-decoration: none;
        font-size: 0.9rem;
    }

    .back-to-top:hover {
        text-decoration: underline;
    }

    @media (max-width: 768px) {
        .post-title {
            font-size: 1.5rem;
        }

        .post-subtitle {
            font-size: 1.1rem;
        }
    }
</style>

<Layout title={title} description={description}>
    <main>
        <h1 class="center">Design delivers!</h1>
        <h3 class="center baloon">
            Designing for sustainabilty? What's that...
        </h3>

        <!-- Table of Contents -->
        <div class="toc">
            <h2 class="center">Table of Contents</h2>
            <ul>
                {
                    renderedPosts.map((post) => (
                        <li>
                            <a href={`#${post.id}`}>{post.data.title}</a>
                        </li>
                    ))
                }
            </ul>
        </div>

        <!-- Posts Content -->
        <div class="posts-container">
            {
                renderedPosts.map((post) => (
                    <article class="post" id={post.id}>
                        <div class="post-header">
                            <h2 class="post-title">{post.data.title}</h2>
                            {post.data.subtitle && (
                                <p class="post-subtitle">
                                    {post.data.subtitle}
                                </p>
                            )}
                        </div>

                        {post.data.image && (
                            <div class="post-image">
                                <Image
                                    src={post.data.image.src}
                                    alt={post.data.image.alt}
                                    width={600}
                                    height={300}
                                />
                            </div>
                        )}

                        <div class="post-content">
                            <post.Content />
                        </div>

                        <!-- <a href="#top" class="back-to-top">
                            â†‘ Back to top
                        </a> -->
                    </article>
                ))
            }
        </div>
    </main>
</Layout>
