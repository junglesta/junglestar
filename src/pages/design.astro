---
import Layout from "@layouts/Layout.astro";
import { getCollection, render } from "astro:content";
import { Image } from "astro:assets";

const posts = await getCollection("designConcepts", ({ data }) => {
    return !import.meta.env.PROD || data.draft !== true;
});

// Render all posts content
const renderedPosts = await Promise.all(
    posts.map(async (post) => {
        const { Content } = await render(post);
        return {
            ...post,
            Content,
        };
    }),
);

// Page metadata
const title = "Junglestar Design | Because Why";
const description =
    "Sustainable Web Design to help the planet. Change. We help small enterprises with websites, apps, and marketing communication.";
---

<style>
    main {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem 1rem;
    }

    h1 {
        font-size: 2.5rem;
        margin-bottom: 2rem;
        color: #111827;
    }

    .toc {
        margin: 2rem 0;
        padding: 1.5rem;
        background-color: #f9fafb;
        border-radius: var(--radius);
    }

    .toc h2 {
        margin-bottom: 1rem;
        font-size: 1.25rem;
    }

    .toc ul {
        list-style: none;
        padding: 0;
    }

    .toc li {
        margin-bottom: 0.5rem;
    }

    .toc a {
        color: var(--brand);
        text-decoration: none;
    }

    .toc a:hover {
        text-decoration: underline;
    }

    .posts-container {
        margin-top: 3rem;
    }

    .post {
        margin-bottom: 4rem;
        padding: 2rem 0;
        border-bottom: 1px solid #e5e7eb;
    }

    .post:last-child {
        border-bottom: none;
    }

    .post_header {
        margin-bottom: 2rem;
    }

    .post_title {
        color: var(--brand);
        font-size: 2rem;
        margin-bottom: 0.5rem;
    }

    .post_subtitle {
        margin-bottom: 1rem;
        font-weight: var(--weight_med);
    }

    .post_image {
        margin: 2rem 0;
        text-align: center;
    }

    .post_image img {
        max-width: 100%;
        height: auto;
        border-radius: var(--radius);
    }

    .post_content {
        /*color: #374151;*/
    }

    .post_content :global(h1),
    .post_content :global(h2),
    .post_content :global(h3) {
        margin-top: 2rem;
        margin-bottom: 1rem;
    }

    .post_content :global(p) {
        margin-bottom: var(--space_block);
    }

    .post_content :global(ul),
    .post_content :global(ol) {
        margin-bottom: var(--space_block);
        padding-left: var(--space_inline);
    }

    .post_content :global(a) {
        color: var(--brand);
        text-decoration: underline;
    }

    .back_to_top {
        display: inline-block;
        margin-top: 1rem;
        color: var(--brand);
        text-decoration: none;
        font-size: 0.9rem;
    }

    .back_to_top:hover {
        text-decoration: underline;
    }

    /*@media (max-width: 768px) {
        .post_title {
            font-size: 1.5rem;
        }

        .post_subtitle {
            font-size: 1.1rem;
        }
    }*/
</style>

<Layout title={title} description={description}>
    <main>
        <h2 class="center">Design delivers!</h2>
        <h3 class="center">
            Designing for sustainabilty? What's that...
        </h3>

        <!-- Table of Contents -->
        <div class="toc">
            <h4 class="center">Table of Contents</h4>
            <ul>
                {
                    renderedPosts.map((post) => (
                        <li>
                            <a href={`#${post.id}`}>{post.data.title.toUpperCase()}</a>
                        </li>
                    ))
                }
            </ul>
        </div>

        <!-- Posts Content -->
        <div class="posts-container">
            {
                renderedPosts.map((post) => (
                    <article class="post" id={post.id}>

                        {post.data.image && (
                            <div class="post_image">
                                <Image
                                    src={post.data.image.src}
                                    alt={post.data.image.alt}
                                    width={200}
                                    height={200}
                                />
                            </div>
                        )}

                        <div class="post_header">
                            <h3 class="post_title">{post.data.title}</h3>
                            {post.data.subtitle && (
                                <p class="post_subtitle">
                                    {post.data.subtitle}
                                </p>
                            )}
                        </div>



                        <div class="post_content">
                            <post.Content />
                        </div>

                        <!-- <a href="#top" class="back_to_top">
                            â†‘ Back to top
                        </a> -->
                    </article>
                ))
            }
        </div>
    </main>
</Layout>
