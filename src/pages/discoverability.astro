---
//pages/discoverability.astro
import Layout from "@layouts/Layout.astro";
import Header from "@components/HeaderSlotted.astro";
import Gmap from "@components/Gmap.astro";
// Page metadata
const pageTitle = "Junglestar | Pricing";
const pageDescription =
  "Flexible one-stop web agency. We design, code & deploy â€” from webstores to web apps. Packed solutions & custom designs for great user experiences.";
const pageSubtitle = "WHERE ARE YOU?";
---

<style>
  .light_bg,
  .page_content.light_bg {
    background-color: #c3daf1;
  }

  .mean_title {
    color: var(--brand);
    min-height: 50dvh;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
  }

  .mean_title.mean_title--first {
    background-color: black;
  }
  .mean_title.mean_title--second {
    margin-top: 2rem;
  }
  .mean_title.mean_title--first h1,
  .mean_title.mean_title--first h2,
  .mean_title.mean_title--first h3 {
    color: white;
  }

  .top_pad--big {
    padding-top: 8dvw;
  }
  .looper__link {
    display: flex;
    flex-direction: column;
    margin-bottom: 2rem;
  }

  .product_text h2,
  .product_text h3 {
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
  }

  .color_black {
    color: #000 !important;
  }

  .product_text .button_row {
    padding-inline: calc(var(--space_inline) / 1);
    text-align: center;
  }
</style>

<Layout title={pageTitle} description={pageDescription} pageSubtitle={pageSubtitle}>
  <div slot="landing_screen">
    <Header>{pageSubtitle}</Header>
  </div>
  <Gmap />
</Layout>
