---
//import Welcome from '../components/aaa.astro';
import Layout from "@layouts/Layout.astro";
import Header from "@components/HeaderSlotted.astro";
import Gmap from "@components/Gmap.astro";
// Page metadata
const pageTitle = "Junglestar | Pricing";
const pageDescription =
  "Flexible one-stop web agency. We design, code & deploy — from webstores to web apps. Packed solutions & custom designs for great user experiences.";
const pageSubtitle = "Check our packages!";
---

<style>
  .brand_color {
    color: var(--brand);
  }

  .light_bg,
  .page_content.light_bg {
    background-color: #c3daf1;
  }

  .mean_title {
    color: var(--brand);
    min-height: 50dvh;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
  }

  .mean_title.mean_title--first {
    background-color: black;
  }
  .mean_title.mean_title--second {
    margin-top: 2rem;
  }
  .mean_title.mean_title--first h1,
  .mean_title.mean_title--first h2,
  .mean_title.mean_title--first h3 {
    color: white;
  }

  .mean_icon {
    min-width: 120px;
    padding-top: 10px;
    width: 20vw;
    max-width: 240px;
  }
  .mean_icon.four_icon_group {
    max-width: 80vw;
    display: flex;
    width: 80vw;
  }
  @media (min-width: 601px) {
    .mean_icon.four_icon_group {
      width: 70vw;
    }
  }
  @media (min-width: 821px) {
    .mean_icon.four_icon_group {
      width: 60vw;
    }
  }
  @media (min-width: 1025px) {
    .mean_icon.four_icon_group {
      width: 50vw;
    }
  }
  @media (min-width: 1025px) {
    .mean_icon.four_icon_group {
      width: 50vw;
    }
  }
  @media (min-width: 1025px) {
    .mean_icon.four_icon_group {
      width: 50vw;
    }
  }

  .top_pad--big {
    padding-top: 8dvw;
  }
  .looper__link {
    display: flex;
    flex-direction: column;
    margin-bottom: 2rem;
  }

  .product_text h2,
  .product_text h3 {
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
  }

  .color_black {
    color: #000 !important;
  }

  /*h2,
  .h2 {
    font-size: 3.5dvw;
    line-height: 1.1;
  }

  h4,
  .h4 {
    font-size: 2.5dvw;
    line-height: 1.1;
  }

  @media (max-width: 800px) {
    h4,
    .h4 {
      font-size: 20px;
    }
  }*/

  .product_grid {
    margin: 0 8dvw;
    display: flex;
    flex-direction: column;
    gap: calc(var(--space_inline) / 2);
    line-height: 1.15;
  }

  @media (min-width: 1025px) {
    .product_grid {
      display: flex;
      flex-direction: row;
      align-items: stretch;
      gap: calc(var(--space_inline) / 2);
    }
  }

  .product_text {
    margin-block: calc(var(--space_block) / 2);
    padding-inline: calc(var(--space_inline) / 2);
  }

  .selling_points {
    font-size: 1rem;
    margin-bottom: calc(var(--space_block) / 2);
    max-width: 400px;
    margin-inline: auto;
    ul {
      margin-left: calc(var(--space_inline) * 2);
      margin-right: calc(var(--space_inline) * 1);
    }
    li {
      padding-left: calc(var(--space_inline) / 1.5);
    }
    li::marker {
      content: "✓";
      color: limegreen;
      font-weight: bold;
    }
  }

  .button_row {
    padding-top: 0.125rem;
    padding-bottom: 0.5rem;
    width: 100%;
    display: block;
    a {
      color: var(--brand);
      text-decoration: none;
      position: relative;
      display: inline-block;
    }
  }

  .product_text .button_row {
    padding-inline: calc(var(--space_inline) / 1);
    text-align: center;
  }

  /*.button {
    line-height: 32px;
    padding: 5px 15px;
    border: 2px solid var(--brand);
  }*/

  four_icon_group svg {
    padding: 4px;
    max-height: 210px;
  }

  small {
    display: block;
    font-size: 50%;
  }

  .starting_at {
    font-size: 66%;
  }
</style>

<Layout title={pageTitle} description={pageDescription}>
  <div slot="landing_screen">
    <Header>{pageSubtitle}</Header>
  </div>

  <div class="print_only">
    <div class="print_imperatif">Make life easy for your customers!</div>
    <div class="print_title">Junglestar</div>
    <div class="print_subtitle">
      Junglestar can make you a fast-loading website, crafted to out-perform your competitors.
    </div>
  </div>

  <div class="light_bg offer_content">
    <div class="scrolltarget">
